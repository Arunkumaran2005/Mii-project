from flask import Flask, render_template, request, redirect
import sqlite3

app = Flask(__name__)

# Database init
def init_db():
    with sqlite3.connect('database/donors.db') as con:
        con.execute('''CREATE TABLE IF NOT EXISTS donors (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            name TEXT,
            age INTEGER,
            blood_group TEXT,
            city TEXT,
            phone TEXT
        )''')

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/register', methods=['GET', 'POST'])
def register():
    if request.method == 'POST':
        data = (request.form['name'], request.form['age'], request.form['blood_group'],
                request.form['city'], request.form['phone'])
        with sqlite3.connect('database/donors.db') as con:
            con.execute("INSERT INTO donors (name, age, blood_group, city, phone) VALUES (?, ?, ?, ?, ?)", data)
        return redirect('/')
    return render_template('register.html')

@app.route('/search', methods=['GET', 'POST'])
def search():
    donors = []
    if request.method == 'POST':
        blood_group = request.form['blood_group']
        city = request.form['city']
        with sqlite3.connect('database/donors.db') as con:
            cur = con.cursor()
            cur.execute("SELECT * FROM donors WHERE blood_group=? AND city=?", (blood_group, city))
            donors = cur.fetchall()
    return render_template('search.html', donors=donors)

if __name__ == '__main__':
    init_db()
    app.run(debug=True)
